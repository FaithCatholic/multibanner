{% if attributes -%}
  <div{{ attributes }}>
{% endif %}
  {% if title %}
    <h3>{{ title }}</h3>
  {% endif %}
  {% if layout == 'front' %}
    <div class="multibanner-items">
      {% set count = 1 %}
      <div class="multibanner-column multibanner-column-{{ count }}">
      {% for row in rows %}
        {% if loop.index0 % 3 == 0 %}
          {% if loop.first != true %}
            {% set count = count + 1 %}
            </div><div class="multibanner-column multibanner-column-{{ count }}">
          {% endif %}
        {% endif %}
        <div class="multibanner-item multibanner-count-{{ loop.index }}">{{ row.content }}</div>
      {% endfor %}
      </div>
    </div>
  {% else %}
    <ul{{ list.attributes }}>
      {% for row in rows %}
        <li{{ row.attributes }}>{{ row.content }}</li>
      {% endfor %}
    </ul>
  {% endif %}
{% if attributes -%}
  </div>
{% endif %}
